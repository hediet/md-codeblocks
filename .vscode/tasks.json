{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch CLI",
      "type": "shell",
      "command": "pnpm",
      "args": ["--filter", "@vscode/codeblock-extractor", "exec", "tsc", "--watch"],
      "group": "build",
      "isBackground": true,
      "problemMatcher": "$tsc-watch",
      "presentation": {
        "group": "dev",
        "reveal": "always"
      }
    },
    {
      "label": "Watch VS Code Extension",
      "type": "shell",
      "command": "pnpm",
      "args": ["--filter", "codeblock-extractor-vscode", "watch"],
      "group": "build",
      "isBackground": true,
      "problemMatcher": "$tsc-watch",
      "presentation": {
        "group": "dev",
        "reveal": "always"
      }
    },
    {
      "label": "Dev",
      "dependsOn": ["Watch CLI", "Watch VS Code Extension"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
